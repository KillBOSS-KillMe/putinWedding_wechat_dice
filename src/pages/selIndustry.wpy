<template>
  <view>
    <view class="title">选择行业</view>
    <view class="list">
      <repeat for="{{list}}" item="item">
        <view class="{{activeNum == item.id?'active':''}}" data-sel="{{item.id}}"  @tap="sel">
          {{item.name}}
        </view>
      </repeat>
    </view>
    <view class="sub">
      <view @tap="sub">确定</view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class SelIndustry extends wepy.page {
    config = {
      navigationBarTitleText: '行业选择'
    }
    components = {}

    mixins = []

    data = {
      list: [],
      activeNum: -1,
    }

    computed = {
      
    }

    methods = {
      // 选择行业
      sel(e) {
        console.log(e)
        this.activeNum = e.currentTarget.dataset.sel
        console.log(this.activeNum)
        this.$apply()
      },
      // 提交
      sub() {
        let id=this.list.id
        console.log(id)
        if(id=='-1'){
          wx.showToast({
            title: '请选择行业',
            icon: 'none',
            duration: 1000,
            mask: true
          })
        }else{
          if(this.a=='0'){
          //发帖需要
            let url = `/pages/postNeed?id=${id}`
            this.$navigate(url)
          }else if(this.a=='1'){
            // 发帖--提供
            let url = `/pages/postProvide?id=${id}`
            this.$navigate(url)
          }else if(this.a=='2'){
            // 发帖--同行互换
            let url = `/pages/postExchange?id=${id}`
            this.$navigate(url)
          }
        }
      }
    }

    events = {
      
    }

    onLoad(e) {
      let a = e.a;
      this.a=a
      this.getIndustry()
    }
    // 获取行业
    getIndustry() {
      wx.showToast({
        title: "数据加载...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/auth/industrie_list`,
        method: 'GET',
        header: {
          Authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {},
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code == 8888) {
            this.list = data.data.data
            this.$apply()
          }
        }
      })
    }
  }
</script>
