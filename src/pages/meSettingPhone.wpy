.code{
  justify-content: flex-start;
  input{
    width: 352rpx;
    margin-right: 20rpx;
  }
  .getCode{
    width: 222rpx;
    height: 80rpx;
    border-radius: 10rpx;
    border: 1rpx solid #F42652;
    color: #F42652;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
