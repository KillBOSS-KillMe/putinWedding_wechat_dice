<template>
  <view>
    <view class="label">
      更改手机号
      <text>当前手机号：{{userInfo.phone}}</text>
    </view>
    <view class="item code">
      <input type="text" data-name="code" @input="getSetData" placeholder="请输入验证码" />
      <view class="getCode" @tap="getCode">{{time}}</view>
    </view>
    <view class="label">
      输入新手机号
    </view>
    <view class="item">
      <input type="text" data-name="phone" @input="getSetData" placeholder="请输入身份证号码" />
    </view>
    <view class="sub">
      <view @tap="sub">提交</view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import check from '../mixins/check'
  export default class MeSettingPhone extends wepy.page {
    config = {
      navigationBarTitleText: '更改手机号'
    }
    components = {}

    mixins = [check]

    data = {
      formNode: {
        phone: '',
        code: ''
      },
      userInfo: {},
      disabled: false,
      currentTime: 60,   // 倒计时初始值
      time: '发送验证码'
    }

    computed = {}

    methods = {
      getSetData(e) {
        let formNode = this.formNode
        let name = e.currentTarget.dataset.name
        let value = e.detail.value
        formNode[name] = value
        this.formNode = formNode
        this.$apply()
      },
      sub() {
        let formNode = this.formNode
        // if (this.check.isIdentity_18(formNode.IDCard)) {
        //   wepy.showModal({
        //     title: '',
        //     content: '请输入身份证号码',
        //     showCancel: false
        //   })
        //   return
        // }
        // if (this.check.isNull(formNode.name)) {
        //   wepy.showModal({
        //     title: '',
        //     content: '请输入名称',
        //     showCancel: false
        //   })
        //   return
        // }
        // if (this.check.isPhone(formNode.phone)) {
        //   wepy.showModal({
        //     title: '',
        //     content: '请输入电话',
        //     showCancel: false
        //   })
        //   return
        // }
        // if (this.check.isNull(formNode.code)) {
        //   wepy.showModal({
        //     title: '',
        //     content: '请输入验证码',
        //     showCancel: false
        //   })
        //   return
        // }
        if (formNode.IDCard == '') {
          wepy.showModal({
            title: '',
            content: '请输入身份证号码',
            showCancel: false
          })
          return
        }
        if (formNode.name == '') {
          wepy.showModal({
            title: '',
            content: '请输入名称',
            showCancel: false
          })
          return
        }
        if (formNode.phone.length != 11) {
          wepy.showModal({
            title: '',
            content: '请输入电话',
            showCancel: false
          })
          return
        }
        if (formNode.code == 1) {
          wepy.showModal({
            title: '',
            content: '请输入验证码',
            showCancel: false
          })
          return
        }
        wx.showToast({
          title: "注册中...",
          icon: 'loading',
          duration: 10000
        });
        wx.request({
          url: `${this.$parent.globalData.requestUrl}/auth/clean_register`,
          method: 'PUT',
          header: {
            'content-type':'application/json',
            authorization: this.$parent.globalData.token,
            apikey: this.$parent.globalData.apikey
          },
          data: {
            number: formNode.IDCard,
            name: formNode.name,
            phone: formNode.phone,
            code: formNode.code,
            pid: formNode.pid
          },
          success: data => {
            wx.hideToast()
            data = this.$parent.null2str(data)
            if (data.data.code === 8888) {
              wx.showToast({
                title: "注册成功",
                icon: 'success',
                duration: 2000
              });
              setTimeout(() => {
                this.$redirect('/pages/index')
              }, 2000)
            } else {
            wx.showToast({
              title: data.data.msg,
              icon: 'none'
            });
          }
          }
        })
      },
      // 获取验证码
      getCode() {
        if (this.disabled) {
          return false
        }
        if (this.check.isPhone(this.formNode.phone)) {
          wepy.showModal({
            title: '',
            content: '请输入电话',
            showCancel: false
          })
          return
        }
        wx.showToast({
          title: "请求发送中...",
          icon: 'loading',
          duration: 10000
        });
        this.disabled = true
        this.$apply()
        wx.request({
          url: `${this.$parent.globalData.requestUrl}/auth/send_code`,
          method: 'POST',
          header: {
            'content-type':'application/json',
            authorization: this.$parent.globalData.token,
            apikey: this.$parent.globalData.apikey
          },
          data: {
            phone: this.formNode.phone
          },
          success: data => {
            wx.hideToast()
            data = this.$parent.null2str(data)
            if (data.data.code === 8888) {
              wx.showToast({
                title: data.data.msg,
                icon: 'success',
                duration: 1000
              });
              this.$apply()
              this.countdown()
            } else {
              wx.showToast({
                title: data.data.msg,
                icon: 'none'
              });
            }
          }
        })
      }
    }

    events = {
      
    }
    onLoad() {
      // this.formNode['pid'] = this.$parent.globalData.pid
      // this.$apply()
      // this.userInfo = this.$parent.globalData.userInfo
      this.userInfo['phone'] = '19999999990'
      this.$apply()
      // if (this.userInfo.status != 2) {
      //   // 提示注册
      //   this.goRegistered()
      // }
    }
    // 提示注册
    goRegistered() {
      wx.showToast({
        title: "检测到用户已注册，进入首页",
        icon: 'none',
        duration: 2000
      });
      setTimeout(() => {
        this.$redirect('/pages/index')
      }, 2000)
    }
    // 倒计时
    countdown() {
      var currentTime = this.currentTime;
      this.time = `倒计时${currentTime}秒`
      this.$apply()
      var interval = setInterval(() => {
        this.time = '倒计时' + (currentTime - 1) + '秒'
        this.$apply()
        currentTime--
        if (currentTime <= 0) {
          clearInterval(interval)
          this.time = '重新获取'
          this.currentTime = 60
          this.disabled = false
          this.$apply()
        }
      }, 1000)
    }
  }
</script>
