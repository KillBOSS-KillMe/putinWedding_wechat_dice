.label{
  width: 690rpx;
  height: 80rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #1F1F1F;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  text{
    padding-left: 20rpx;
    font-weight: 500;
    font-size: 26rpx;
  }
}
.item{
  width: 690rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  input{
    width: 604rpx;
    height: 80rpx;
    padding: 0 30rpx;
    border: 1rpx solid #ddd;
    font-size: 26rpx;
    color: #666;
    border-radius: 10rpx;
