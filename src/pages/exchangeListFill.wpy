<template>
  <view class="container">
    <view class="orderTitle">
      <text class="{{1 == currentIndex ? 'cur' : 'title-sel'}}" bindtap='titleClick' data-idx='1'>未支付</text>
      <text class="{{3 == currentIndex ? 'cur' : 'title-sel'}}" bindtap='titleClick' data-idx='3'>待接单</text>
      <text class="{{4 == currentIndex ? 'cur' : 'title-sel'}}" bindtap='titleClick' data-idx='4'>已完成</text>
    </view>
    <view class="orderList"  current='{{currentIndex}}'>
      <repeat for="{{list}}" item="item">
        <view class='orderListCount'> 
          <view class="orderContent">
            <text class="type">{{item.industrie_ids}}</text>
            <text class="name">{{item.title}}</text>
          </view>
          <view class="display orderPrice">
            <view class="price">共计：<text>￥{{item.money}}</text></view>
            <!-- <text class="userInfo">{{item.username}}/{{item.adders}}</text> -->
          </view>
          <text class="time">发布于{{item.created_at}}</text>
          <view class="display orderType">
            <view class="orderTypeItem">
              <text wx:if="{{item.th_j_status=='1'}}">未支付定金</text>
              <text wx:if="{{item.th_j_status=='2'}}">未支付尾款</text>
              <text wx:if="{{item.th_j_status=='3'}}">待完成</text>
              <text wx:if="{{item.th_j_status=='4'}}">已完成</text>
            </view>
            <view class="orderListType">
              <view class="orderType">
                <text @tap='pay' data-id='{{item.id}}' data-type='1' wx:if="{{item.th_j_status=='1'}}">支付定金</text>
                <text @tap='pay' data-id='{{item.id}}' data-type='2' wx:if="{{item.th_j_status=='2'}}">未支付尾款</text>
                <text @tap='pay' data-id='{{item.id}}' data-type='3' wx:if="{{item.th_j_status=='3'}}">确定完成</text>
                <text @tap='pay' data-id='{{item.id}}' data-type='4' wx:if="{{item.th_j_status=='4'}}">订单评价</text>
                <text wx:else style="display:none"></text>
              </view>
              <!-- <text class="del" wx:if="{{item.th_f_status=='1' || item.th_f_status=='3'}}">删除</text> -->
              <!-- <text class="receivedOrder" wx:if="{{item.th_f_status=='3'}}">已接单</text>
              <text wx:else hidden></text> -->
            </view>
          </view>
        </view>
      </repeat>
      <view class="listNull" wx:if="{{list.length==0}}">暂无数据</view>
    </view>    
  </view>
</template>

<script>
import wepy from 'wepy';
export default class ExchangeListFill extends wepy.page {
  config = {
    navigationBarTitleText: '同行互换-被'
  };
  components = {};

  mixins = [];

  data = {
    currentIndex: 1,
    list: [],
    current_page: 1,
    last_page: 0,
  };

  computed = {};

  methods = {
     titleClick: function (e) {
        console.log(e.currentTarget.dataset.idx)
        this.currentIndex = e.currentTarget.dataset.idx
        this.current_page=1
        this.getListData()
        this.list=[]
        this.$apply()
    }
  };

  events = {};

  onLoad() {
    this.userInfo = this.$parent.globalData.userInfo
    this.getListData()
  }
  getListData(){
    wx.showToast({
      title: "数据加载...",
      icon: 'loading',
      duration: 1000000
    });
    wx.request({
      url: `${this.$parent.globalData.requestUrl}/order/get_swap_b_list`,
      method: 'GET',
      header: {
        Authorization: this.$parent.globalData.token,
        apikey: this.$parent.globalData.apikey
      },
      data: {
        page: this.current_page,
        th_j_status:this.currentIndex
      },
      success: data => {
        wx.hideToast()
        data = this.$parent.null2str(data)
        if (data.data.code == 8888) {
          this.list=this.list.concat(data.data.data.data)
              // 当前页码
          this.current_page = data.data.data.current_page
          // 总页码
          this.last_page = data.data.data.last_page
          this.$apply()
        }
      }
    })
  }
  pay(e){
    let type =e.currentTarget.dataset.type
    let orderId=e.currentTarget.dataset.id
    //支付定金
    if(type==1){
      let url = `/pages/exchangeFillEarnest?id=${orderId}`
      this.$navigate(url)
      return false
    }
    //支付尾款
    if(type==2){
      let url = `/pages/exchangeFillEnd?id=${orderId}`
      this.$navigate(url)
      return false
    }
     //确定完成
    if(type==3){
      let url = `/pages/exchangeFillConfirm?id=${orderId}`
      this.$navigate(url)
      return false
    }
    //订单评价
    if(type==4){
      let url = `/pages/orderPost?id=${orderId}`
      this.$navigate(url)
      return false
    }
  }
  //下拉加载
  onReachBottom(){
    this.current_page++;
    this.getListData()
  }
}
</script>
