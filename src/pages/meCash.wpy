<template>
  <view>
    <view class="title">
      账户余额：<text>￥{{userInfo.commission}}</text>
    </view>
    <view class="list">
      <repeat for="{{selRechargeList}}" item="item">
        <view @tap="selMoney" data-index="{{index}}" class="{{index == serNode?'active':''}}">{{item.money}}元</view>
      </repeat>
    </view>
    <view class="sub">
      <view @tap="recharge">提现</view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class MeCash extends wepy.page {
    config = {
      navigationBarTitleText: '提现'
    }
    components = {}

    mixins = []

    data = {
      id: '',
      money: '',
      userInfo: {},
      serNode: 0,
      selRechargeList: [],
    }

    computed = {}

    methods = {
      selMoney(e) {
        let index = e.currentTarget.dataset.index
        this.serNode = index
        this.id = this.selRechargeList[index].id
        this.$apply()
      }

    }

    events = {
      
    }

    onLoad(e) {
      this.userInfo = this.$parent.globalData.userInfo
      console.log(e)
      // let txId=e.id
      let type=e.type
      this.type=type
      this.$apply()
      this.getList()
    }
    // 
    recharge() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/withdraw/set_withdraw`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          id:this.id,
          type:this.type
        },
        method: 'POST',
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            wx.showToast({
              title: "提现成功",
              icon: 'success',
              duration: 2000
            });
             // 两秒后返回上一页
            setTimeout(e => {
              wx.navigateBack({
                data: -1
              })
            }, 2000)
          } else {
            wx.showToast({
              title: data.data.msg,
              icon: 'none'
            });
          }
        }
      })
    }
