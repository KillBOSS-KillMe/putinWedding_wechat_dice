<template>
  <view class="container">
    <view class="orderTitle">
      <text class="{{1 == currentIndex ? 'cur' : 'title-sel'}}" bindtap='titleClick' data-idx='1'>未支付</text>
      <text class="{{2 == currentIndex ? 'cur' : 'title-sel'}}" bindtap='titleClick' data-idx='2'>待确认</text>
      <text class="{{3 == currentIndex ? 'cur' : 'title-sel'}}" bindtap='titleClick' data-idx='3'>已完成</text>
    </view>
    <view class="orderList"  current='{{currentIndex}}'>
      <repeat for="{{list}}" item="item">
        <view>
          <view class="flex orderListTitle">
            <text>下单时间 {{item.created_at}}</text>
            <text wx:if="{{item.x_j_status=='1'}}">未支付押金</text>
            <text wx:if="{{item.x_j_status=='2'}}">待确认</text>
            <text wx:if="{{item.x_j_status=='3'}}">已完成</text>
          </view>
          <view class="orderContent display">
            <image src="{{item.images}}">
            <view class="orderCount">
              <view style="margin-bottom: 16rpx">
                <text class="type">{{item.industrie_ids}}</text>
                <text class="name">{{item.title}}</text>
              </view>
              <text class="performance">{{item.content}}</text>
              <view class="totaol">共计：<text>￥{{item.money}}</text></view>
            </view>
          </view>
          <view class="display orderListBottom">
            <text class="arrears">押金{{item.j_d_money}}元</text>
            <!-- <view class="del">
              <text wx:if="{{item.x_f_status=='1'}}">删除</text>
              <text wx:else hidden>删除</text>
            </view> -->
            <view class="orderType">
              <text @tap='pay' data-id='{{item.id}}' data-type='1' wx:if="{{item.x_j_status=='1'}}">支付押金</text>
              <text @tap='pay' data-id='{{item.id}}' data-type='2' wx:if="{{item.x_j_status=='2'}}">确认订单</text>
              <text @tap='pay' data-id='{{item.id}}' data-type='3' wx:if="{{item.x_j_status=='3'}}">订单评价</text>
              <text wx:else style="display:none"></text>
            </view>
          </view>
        </view>
      </repeat>
      <view class="listNull" wx:if="{{list.length==0}}">暂无数据</view>
      <view class="listNull" wx:if="{{current_page >=last_page}}">暂无更多数据</view>
    </view>
  </view>
</template>

<script>
import wepy from 'wepy';
export default class OrderPostList extends wepy.page {
  config = {
    navigationBarTitleText: '接受的需要'
  };
  components = {};

  mixins = [];

  data = {
    currentIndex: 1,
    current_page: 1,
    last_page: 0,
    list: [],
    
  };

  computed = {};

  methods = {
     
  };
  titleClick (e) {
    console.log(e.currentTarget.dataset.idx)
    this.currentIndex = e.currentTarget.dataset.idx
    this.current_page=1
    this.getListData()
    this.list=[]
    this.$apply()
  }
  events = {};

  onLoad(e) {
    console.log("++++++++++++"+e)
    this.getListData()
  }
  //获取列表
  getListData(){
    wx.showToast({
      title: "数据加载...",
      icon: 'loading',
      duration: 1000000
    });
    wx.request({
      url: `${this.$parent.globalData.requestUrl}/order/get_need_b_list`,
      method: 'GET',
      header: {
        Authorization: this.$parent.globalData.token,
        apikey: this.$parent.globalData.apikey
      },
      data: {
        page: this.current_page,
        x_j_status:this.currentIndex
      },
      success: data => {
        wx.hideToast()
        data = this.$parent.null2str(data)
        if (data.data.code == 8888) {
          this.list=this.list.concat(data.data.data.data)
              // 当前页码
          this.current_page = data.data.data.current_page
          // 总页码
          this.last_page = data.data.data.last_page
          this.$apply()
        }
      }
    })
  }
  pay(e){
    let type =e.currentTarget.dataset.type
    let orderId=e.currentTarget.dataset.id
    //支付押金
    if(type==1){
      let url = `/pages/orderPostListDteail?type=${type}&id=${orderId}`
      console.log(url)
      this.$navigate(url)
      return false
    }
     //确定完成
    if(type==2){
      let url = `/pages/orderNeedConfirm?type=${type}&id=${orderId}`
      this.$navigate(url)
      return false
    }
    //订单评价
    if(type==3){
      let url = `/pages/orderPost?type=${type}&id=${orderId}`
      this.$navigate(url)
      return false
    }
  }
  onReachBottom() {
    wx.showToast({
      title: "拼命加载中...",
      icon: 'loading',
      duration: 1000000
    });
    this.current_page++
    this.getListData()
    // Do something when page reach bottom.
  }
}
</script>
