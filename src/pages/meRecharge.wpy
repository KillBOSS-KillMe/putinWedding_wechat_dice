<template>
  <view>
    <view class="title">
      账户余额：<text>￥{{userInfo.amount}}</text>
    </view>
    <view class="list">
      <repeat for="{{selRechargeList}}" item="item">
        <view @tap="selMoney" data-index="{{index}}" class="{{index == serNode?'active':''}}">{{item.money}}元</view>
      </repeat>
    </view>
    <view class="sub">
      <view @tap="recharge">充值</view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class MeRecharge extends wepy.page {
    config = {
      navigationBarTitleText: '充值'
    }
    components = {}

    mixins = []

    data = {
      id: '',
      money: '',
      userInfo: {},
      serNode: 0,
      selRechargeList: []
    }

    computed = {}

    methods = {
      selMoney(e) {
        let index = e.currentTarget.dataset.index
        this.serNode = index
        this.id = this.selRechargeList[index].id
        this.$apply()
      }

    }

    events = {
      
    }

    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
      this.$apply()
      this.getList()
    }
    // 充值
    recharge() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/recharge/wx_pay`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          id: this.id
        },
        method: 'POST',
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            this.runRecharge(data.data.data)
          } else {
            wx.showToast({
              title: data.data.msg,
              icon: 'none'
            });
          }
        }
      })
    }
    runRecharge(payNode) {
      wx.showToast({
        title: "充值加载中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.requestPayment({
        'timeStamp': payNode.timestamp,
        'nonceStr': payNode.nonceStr,
        'package': payNode.package,
        'signType': payNode.signType,
        'paySign': payNode.paySign,
        'success': data => {
          wx.hideToast()
          wx.showToast({
            title: "充值成功",
            icon: 'success',
            duration: 2000
          });
          // 两秒后返回上一页
          setTimeout(e => {
            wx.navigateBack({
              data: -1
            })
          }, 2000)
        },
        'fail': data => {
          wx.hideToast()
          wx.showToast({
            title: "充值失败",
            icon: 'none',
            duration: 2000
          });
        }
      })
    }
    getList() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      let url = ''
      let data = {}
      if (this.userInfo.type == 2) {
        // 执行酒店加载
        url = 'recharge/get_recharge_tpl_list'
      } else if (this.userInfo.type == 1) {
        // 执行保洁加载
        url = 'withdraw/get_withdraw_tpl_list'
      }
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/${url}`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: data,
        method: 'GET',
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            this.selRechargeList = data.data.data
            this.id = this.selRechargeList[0].id
            this.money = this.selRechargeList[0].money
            this.$apply()
          }
        }
      })
    }
  }
</script>
