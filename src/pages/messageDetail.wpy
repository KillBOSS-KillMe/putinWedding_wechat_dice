<template>
  <view class="containe">
    <view class="messageList">
      <repeat for="{{messageList}}" item="item">
        <view class="carList" wx:if="{{item.status=='0'}}">
          <view class="top">
            <image src='{{item.image_url}}'>
            <text class="userName">{{item.nickname}}</text>
            <view class="message">
              <text class="time">{{item.created_at}}</text>
            </view>
          </view>
          <text class="you">{{item.content}}</text>
        </view>
        <view class="carList" wx:if="{{item.status=='1'}}">
          <view class="twoTop">
            <view class="message">
              <text class="time">{{item.created_at}}</text>
            </view>
            <text class="userName">{{item.nickname}}</text>
            <image src='{{item.image_url}}'>
          </view>
          <text class="me">{{item.content}}</text>
        </view>
      </repeat>
    </view>
    <view class="send">
      <input type="text" @input="getSetData" value="{{content}}" data-name="content" placeholder="请输入...">
      <text @tap='send'>发送</text>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class MessageDetail extends wepy.page {
    config = {
      navigationBarTitleText: '消息详情'
    }
    mixins = []

    data = {
      messageList:'',
      content:''
    }

    computed = {

    }

    methods = {
      // 表单数据获取
      getSetData(e) {
        let value = e.detail.value
        this.content = value
        this.$apply()
      },
    }

    events = {

    }

    onLoad(e) {
      console.log(e)
      this.orderId=e.id
      this.communicate()
    }
    communicate(){
      wx.showToast({
        title: "数据加载...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/message/set_message_send_list`,
        method: 'GET',
        header: {
          Authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          id:this.orderId
        },
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code == 8888) {
            this.messageList=(data.data.data).reverse()
            this.$apply()
          }
        }
      })
    }
    //发送
    send(){
      wx.showToast({
        title: "数据加载...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/message/set_message_send`,
        method: 'POST',
        header: {
          Authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          content:this.content,
          message_id:this.orderId
        },
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code == 8888) {
            this.content=''
            this.communicate()
            this.$apply()
          }
        }
      })
    }
    // 用户信息校验
    verificationUserInfo() {
      if (!this.userInfo.hasOwnProperty('id')) {
        wx.showToast({
          title: "用户信息加载中...",
          icon: 'none',
        });
        return true
      }
    }
  }
</script>
