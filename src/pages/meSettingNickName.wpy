<style lang="less">
.label{
  width: 690rpx;
  height: 80rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #1F1F1F;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  text{
    padding-left: 20rpx;
    font-weight: 500;
    font-size: 26rpx;
  }
}
.item{
  width: 690rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  input{
    width: 604rpx;
    height: 80rpx;
    padding: 0 30rpx;
    border: 1rpx solid #ddd;
    font-size: 26rpx;
    color: #666;
    border-radius: 10rpx;
    margin-left: 20rpx;
  }
}
.code{
  justify-content: flex-start;
  input{
    width: 352rpx;
    margin-right: 20rpx;
  }
  .getCode{
    width: 222rpx;
    height: 80rpx;
    border-radius: 10rpx;
    border: 1rpx solid #F42652;
    color: #F42652;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
}
</style>
<template>
  <view>
    <view class="label">
      更改手机号
      <text>当前手机号：{{userInfo.phone}}</text>
    </view>
    <view class="item code">
      <input type="text" data-name="code" @input="getSetData" placeholder="请输入验证码" />
      <view class="getCode" @tap="getCode">{{time}}</view>
    </view>
    <view class="label">
      输入新手机号
    </view>
    <view class="item">
      <input type="text" data-name="phone" @input="getSetData" placeholder="请输入新手机号" />
    </view>
    <view class="sub">
      <view @tap="sub">提交</view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import check from '../mixins/check'
  export default class MeSettingNickName extends wepy.page {
    config = {
      navigationBarTitleText: '更改昵称'
    }
    components = {}

    mixins = [check]

    data = {
      formNode: {
        phone: '',
        code: ''
      },
      userInfo: {},
      disabled: false,
      currentTime: 60,   // 倒计时初始值
      time: '发送验证码'
    }

    computed = {}

    methods = {
      getSetData(e) {
        let formNode = this.formNode
        let name = e.currentTarget.dataset.name
        let value = e.detail.value
        formNode[name] = value
        this.formNode = formNode
        this.$apply()
      },
      sub() {
        let formNode = this.formNode
        if (formNode.phone.length != 11) {
          wepy.showModal({
            title: '',
            content: '请输入电话',
            showCancel: false
          })
          return false
        }
        wx.showToast({
          title: "修改中...",
          icon: 'loading',
          duration: 10000
        });
        wx.request({
          url: `${this.$parent.globalData.requestUrl}/auth/set_user_phone`,
          method: 'PUT',
          header: {
            'content-type':'application/json',
            authorization: this.$parent.globalData.token,
            apikey: this.$parent.globalData.apikey
          },
          data: {
            name: formNode.name,
          },
          success: data => {
            wx.hideToast()
            data = this.$parent.null2str(data)
            if (data.data.code === 8888) {
              wx.showToast({
                title: "修改成功",
                icon: 'success',
                duration: 2000
              });
              this.setUserInfo()
              setTimeout(() => {
                wx.showToast({
                  title: "更新信息",
                  icon: 'success',
                  duration: 2000
                });
              }, 2000)
            } else {
            wx.showToast({
              title: data.data.msg,
              icon: 'none'
            });
          }
          }
        })
      }
    }

    events = {
      
    }
    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
      this.$apply()
    }
    // 更新用户信息
    setUserInfo() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/auth/my`,
        method: 'GET',
        header: {
          'content-type':'application/json',
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            this.userInfo = Object.assign(this.userInfo, data.data.data);
            this.$parent.globalData.userInfo = this.userInfo
            this.$apply()
            wx.navigateBack({
              delta: 1
            })
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
  }
</script>
