<template>
  <view>
    <view class="label">
      <text class="length">{{list.length}}</text>
      <text>我的好友</text>
    </view>
    <view class="list">
      <view class="title">好友列表</view>
      <repeat for="{{list}}" item="item">
        <view class="item" data-id="{{item.id}}">
          <view class="name">
            <image src="{{item.image_url}}">
            {{item.nickname}}
          </view>
          <text>{{item.updated_at}}</text>
        </view>
      </repeat>
    </view>
  </view>
</template>

<script>
import wepy from 'wepy';
import check from '../mixins/check';
export default class MeSubordinate extends wepy.page {
  config = {
    navigationBarTitleText: '我的下级'
  };
  components = {};

  mixins = [check];

  data = {
    userInfo: {},
    list: [],
    current_page: 1,
    last_page: 0
  };

  computed = {};

  methods = {};

  events = {};
  onLoad () {
    this.userInfo = this.$parent.globalData.userInfo;
    this.$apply();
    this.getListData();
  }
  getListData () {
    wx.showToast({
      title: "拼命加载中...",
      icon: 'loading',
      duration: 1000000
    });
    wx.request({
      url: `${this.$parent.globalData.requestUrl}/withdraw/get_my_user_details`,
      header: {
        authorization: this.$parent.globalData.token,
        apikey: this.$parent.globalData.apikey
      },
      data: {
        page:this.current_page
      },
      method: 'GET',
      success: data => {
        wx.hideToast()
        data = this.$parent.null2str(data)
        if (data.data.code === 8888) {
          this.list = this.list.concat(data.data.data.data)
          console.log(this.list.concat(data.data.data.data))
          // 当前页码
          this.current_page = data.data.data.current_page
          // 总页码
          this.last_page = data.data.data.last_page
          this.$apply()
        }
      }
    })
    this.$apply();
  }
        // 下拉刷新
  onPullDownRefresh() {
    wx.showToast({
      title: "拼命加载中...",
      icon: 'loading',
      duration: 1000000
    });
    // 获取liebiao
    this.getListData()
  }
  //上拉加载
  onReachBottom(){
    this.current_page + +
    wx.showToast({
      title: "拼命加载中...",
      icon: 'loading',
      duration: 1000000
    });
    this.getList()
  }
}
</script>
