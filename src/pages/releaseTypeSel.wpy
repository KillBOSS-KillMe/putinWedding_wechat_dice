    display: flex;
    align-items: center;
    justify-content: space-between;
    .item{
      display: flex;
      align-items: center;
      justify-content: space-between;
      radio{
        transform:scale(0.7);
      }
    }
  }
  .sub{
    bottom: 100rpx;
  }
